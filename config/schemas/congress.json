{
  "$schema": "http://json-schema.org/draft-07/schema#",
  "title": "Congress Transactions Schema",
  "type": "object",
  "required": ["transactions", "metadata"],
  "properties": {
    "metadata": {
      "type": "object",
      "required": ["last_updated", "total_count"],
      "properties": {
        "last_updated": {
          "type": "string",
          "format": "date-time"
        },
        "total_count": {
          "type": "integer"
        },
        "date_range": {
          "type": "object",
          "properties": {
            "from": { "type": "string", "format": "date" },
            "to": { "type": "string", "format": "date" }
          }
        }
      }
    },
    "transactions": {
      "type": "array",
      "items": {
        "type": "object",
        "required": ["person", "chamber", "ticker", "transaction_type", "date"],
        "properties": {
          "person": {
            "type": "string",
            "description": "ImiÄ™ i nazwisko polityka"
          },
          "chamber": {
            "type": "string",
            "enum": ["House", "Senate"]
          },
          "ticker": {
            "type": "string",
            "description": "Symbol akcji"
          },
          "sector": {
            "type": "string"
          },
          "transaction_type": {
            "type": "string",
            "enum": ["purchase", "sale", "exchange"]
          },
          "amount_range": {
            "type": "string",
            "description": "Zakres kwoty (np. $15,001 - $50,000)"
          },
          "amount_min": {
            "type": "number"
          },
          "amount_max": {
            "type": "number"
          },
          "date": {
            "type": "string",
            "format": "date"
          },
          "disclosure_date": {
            "type": "string",
            "format": "date"
          },
          "link": {
            "type": "string",
            "format": "uri"
          }
        }
      }
    }
  }
}
